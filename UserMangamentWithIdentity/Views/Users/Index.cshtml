@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>User</h1>


<table class="table table-striped mt-4">
    <thead class="bg-primary text-white">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Eamil </th>
            <th>Roles</th>
            <th>Action</th>

        </tr>
    </thead>

    <tbody>
        @foreach ( var user in Model)
	{
		 <tr>
             <td>@user.FirstName</td>
             <td>@user.LastName</td>
             <td>@user.UserName</td>
             <td>@user.Email</td>
             <td>@string.Join(" , ",user.Roles)</td>
             <td>
                 <a class="btn btn-primary" asp-controller="Users" asp-action="MangeRole" asp-route-userId="@user.ID">Mane Role</a>
             </td>

         </tr>
	}
    </tbody>
</table>